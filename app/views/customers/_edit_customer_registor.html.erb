<body>
  <div class= project_list>

    <h1>顧客編集</h1>
    <% @customer.customer_name %>
    <%= form_with model: @customer do |form| %>
      <%= form.text_field :customer_name, id: "cusomer_name" %>
      </br>
      <%= form.submit "更新", class: "btn_delete" %>
    <% end %>   

    <%= link_to("/customers/#{@customer.id}",method: :delete) do %>
        <button type="button" class = "btn_delete" onclick="location.href='/index'"><i class="fas fa-eraser"></i> 削除</button>
    <% end %>

    <button type="button" class="btn_new" onclick="location.href='/index'"><i class="fas fa-undo-alt"></i> 戻る</button>

  </div>
</body>











































